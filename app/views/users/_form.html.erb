
<div class="container">
	<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-5">

<div style="clear:both;">&nbsp;</div>
<h3 style="margin-bottom: 25px; text-align: center;">User Info</h3>

<div class="form-group">
<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', :class => "form-control", :required => true %>
</div>
</div>

<div class="form-group">
<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password, :class => "form-control", :required => true %>
</div>
</div>

<div class="form-group">
<div class="first-name-field">
<%= form.label :first_name %> 
<%= form.text_field :first_name, :class => "form-control", :required => true %> 
</div>
</div>

<div class="form-group">
<div class="last-name-field">
<%= form.label :last_name %> 
<%= form.text_field :last_name, :class => "form-control", :required => true %> 
</div>
</div>

<div class="form-group">
<div class="birthday-field">
<%= form.label :birthday %> <br />
<%= form.text_field :birthday, :class => "form-control" %> 
</div>
</div>

<div class="form-group">
<div class="gender-field">
<%= form.label :gender %> 
<%= form.text_field :gender, :class => "form-control" %> 
</div>
</div>

<div class="form-group">
<div class="phone-field">
<%= form.label :phone %> 
<%= form.text_field :phone, :class => "form-control" %> 
</div>
</div>

<div class="form-group">
<div class="about-me-field">
<%= form.label :about_me %> 
<%= form.text_area :about_me, rows: 5, :class => "form-control", :required => true %> 
</div>
</div>

<div class="form-group">
<div class="avatar-field">
<%= form.file_field :avatar %>
</div>
</div>

<div class="form-group">
<div class="save-button">
<%= form.submit :Save, :class => "btn btn-info" %>   
</div>
</div> 

  <div class="col-md-3"></div>
    </div>
  </div>
</div>



